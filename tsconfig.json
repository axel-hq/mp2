{
	"compilerOptions": {
		"outDir": "bin/js",
		"strict": true,
		"lib": ["es2022"],
		"target": "es2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"newLine": "lf",
		"module": "esnext",
		"noUncheckedIndexedAccess": true,
	},
	"include": ["src/**/*.ts"],
}
